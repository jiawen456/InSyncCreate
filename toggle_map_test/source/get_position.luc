module get_position (
    input cursor[25],
    output pos[5]
  ) {

  always {
    case (cursor) {
      25b1: pos = 0;
      25b10: pos = 1;
      25b100: pos = 2;
      25b1000: pos = 3;
      25b10000: pos = 4;
      25b100000: pos = 5;
      25b1000000: pos = 6;
      25b10000000: pos = 7;
      25b100000000: pos = 8;
      25b1000000000: pos = 9;
      25b10000000000: pos = 10;
      25b100000000000: pos = 11;
      25b1000000000000: pos = 12;
      25b10000000000000: pos = 13;
      25b100000000000000: pos = 14;
      25b1000000000000000: pos = 15;
      25b10000000000000000: pos = 16;
      25b100000000000000000: pos = 17;
      25b1000000000000000000: pos = 18;
      25b10000000000000000000: pos = 19;
      25b100000000000000000000: pos = 20;
      25b1000000000000000000000: pos = 21;
      25b10000000000000000000000: pos = 22;
      25b100000000000000000000000: pos = 23;
      25b1000000000000000000000000: pos = 24;
      
      default: pos = 0;
    }
  }
}
